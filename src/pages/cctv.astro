---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.png";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Advanced Surveillance Technology for Homes and Businesses",
    subTitle:
      "At MidasTech, we specialize in high-quality CCTV camera systems designed to protect what matters most. Whether you're looking to secure your home, office, or commercial space, our team of experts is here to help you choose the right solution.",
    single: false,
    imgOne: personWorking,
    imgOneAlt: "Wall mount cctv cam.",
    imgTwo: blueprints,
    imgTwoAlt: "Blueprints and digital tablet with construction plans.",
  },
  {
    isRightSection: false,
    title: "State-of-the-Art Technology",
    subTitle:
      "Our cameras offer crystal-clear HD video, night vision, motion detection, and remote access through mobile apps. Our certified technicians ensure your cameras are installed and positioned for maximum coverage and reliability. From single-camera setups to multi-site systems, we design CCTV solutions based on your specific security requirements.",
    img: beforeAfter,
    imgAlt: "Cam Screen Display",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Your Security, Our Priority with Comprehensive CCTV Installation and Sales.",
    subTitle:
      "We specialize in offering - High-Definition Cameras that captures every detail with clarity, 24/7. Remote Monitoring - Keep an eye on your property from anywhere using mobile devices or computers. Tailored Solutions - Custom security setups for homes, businesses, and industries. Professional Installation - Expert technicians to install and configure systems seamlessly. After-Sales Support - Ongoing maintenance for long-term peace of mind.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Hikvision range of products",
    imgTwo: aerialView,
    imgTwoAlt: "spycam",
  },
  {
    isRightSection: false,
    title: "Understanding 4MP PTZ IP CCTV Cameras",
    subTitle:
      "A 4MP PTZ IP CCTV camera combines advanced imaging technology with powerful motion control capabilities, making it a popular choice for both residential and commercial surveillance. The term 4MP refers to the camera’s resolution—4 megapixels—offering crystal-clear image quality with 2560 x 1440 pixels, which is ideal for capturing fine details like faces, license plates, or small objects in high definition. Key Features - Pan, Tilt, and Zoom (PTZ) Functionality, IP Connectivity, High-Definition Video, Night Vision, Smart Features - Modern 4MP PTZ IP cameras often come with intelligent features like motion detection, auto-tracking, and preset tours, where the camera automatically moves between predefined locations.",
    img: usingTools,
    imgAlt:
      "Phone cam remote display",
  },
  {
    isRightSection: true,
    title: "Exploring the Hikvision DarkFighter X - A High-End CCTV Camera",
    subTitle:
      "When it comes to advanced surveillance technology, the Hikvision DarkFighter X stands out as a top-tier CCTV solution designed to perform exceptionally well in low-light conditions. This high-end camera is part of Hikvision's premium range and is engineered for use in challenging environments where lighting is poor, making it ideal for round-the-clock security needs.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Hikvision DarkFighter",
    imgTwo: underConstruction,
    imgTwoAlt: "DarkFighter Cam Display",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Cctv | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://midastechno.com/cctv",
    "url": "https://midastechno/cctv",
    "name": "Expert Consultation Services | MidasTech",
    "description": "Our certified technicians ensure your CCTV systems are installed with precision for full coverage and reliability. From homes to businesses, we don’t just set up cameras – we safeguard your peace of mind. Every angle covered. Every corner protected.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://midastechno.com",
        "name": "MidasTech",
        "description": "MidasTech provides top-quality CCTV installation and monitoring services to ensure the safety of your home, business, or property. "
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Secure Your World with Cutting-Edge CCTV Solutions"
    subTitle="At MidasTech, we provide Reliable, Affordable, Customizable Security Systems, and tailored CCTV solutions that fit your needs and budget."
    btnExists={true}
    btnTitle="Schedule a Consultation Now"
    btnURL="https://forms.gle/vEcRXybvtmhYuxgs5"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Ready to secure your space? Contact us today for a free consultation!"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At MidasTech, we are dedicated to delivering industry-leading services that ensure your surveillance projects are built to your utmost satisfaction."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with MidasTech as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
