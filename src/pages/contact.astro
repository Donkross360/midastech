---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://www.midastechno.com/contact",
    "url": "https://www.midastecno.com/contact",
    "name": "Contact Us | MidasTech",
    "description":
      "Have questions or want to discuss a project? Reach out, and let's craft the perfect solution with our products and services.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://www.midastechno.com",
      "name": "MidasTech",
      "description":
        "At Midas Tech, we understand the diverse energy requirements of our consumers and the pressing need for affordable, clean energy.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
